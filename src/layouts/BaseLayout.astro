---
import '@/styles/fonts.css'
import { ViewTransitions } from "astro:transitions";
import Header from '@/components/Header.astro'
import Gradient from '@/components/Gradient.astro'
import Footer from '@/components/Footer.astro'
const { pageTitle, description } = Astro.props;
---

<html
  lang="en"
  class="font-mono bg-neutral-950 text-neutral-400 selection:bg-neutral-600/25"
>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body class="relative overflow-x-hidden">
    <Gradient />
    <div class="w-full max-w-lg mx-auto flex flex-col gap-16 p-4">
      <Header />
      <slot />
    </div>

    <Footer />
  </body>
</html>
